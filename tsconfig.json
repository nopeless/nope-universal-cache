{
  "compilerOptions": {
    "types": [
      "node",
      "mocha",
      "chai"
    ],
    "lib": ["ESNext"],
    "target": "es2022",
    "module": "es2022",
    "esModuleInterop": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true
  },
  "ts-node": {
    "files": true,
    "esm": true
  },
  "include": [
    "./src/**/*.ts",
  ],
  "exclude": [
    "./node_modules",
    "./**/*.spec.ts"
  ],
  "rootDir": "./src"
}